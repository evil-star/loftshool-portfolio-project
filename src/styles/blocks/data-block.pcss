.data-block {
  &__data {
    width: 100%;
  }
  &__img {
    border-radius: 50%;
    margin: 0 auto 73px auto;
    @include tablets {
      margin-bottom: 19px;
    }
  }
  &__item {
    opacity: 0.15;
    color: $text-color;
    font-weight: 600;
    width: 50%;
    padding-bottom: 15px;
    &_light {
      color: $text-color;
      font-size: 16px;
      font-weight: 600;
      opacity: 1;
    }
  }
}
